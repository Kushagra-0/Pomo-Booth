{
    "manifest_version": 3,
    "name": "PomoBooth",
    "description": "Increase Productivity",
    "version": "1.0.0",
    "icons": {
        "16": "icons/time-8-16.png",
        "32": "icons/time-8-32.png",
        "48": "icons/time-8-48.png",
        "128": "icons/time-8-128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/time-8-16.png",
            "32": "icons/time-8-32.png",
            "48": "icons/time-8-48.png",
            "128": "icons/time-8-128.png"
        } 
    },
    "permissions": ["contextMenus", "alarms", "notifications"],
    "background": {
        "service_worker": "service-worker.js"
    }
}